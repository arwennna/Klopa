<div class="container">
    <div class="row p-3">
        <div class="col justify-content-lg-center">

            <div class="card text-white bg-primary mb-3" style="max-width: 920px; width: 100%; margin: auto">
                <h3 class="card-header">Unos novog grupnog menija</h3>
                <div class="card-body">
                    <form action="/create/meni" method="POST" id="forma_create_menu" enctype="multipart/form-data">
                        <fieldset>
                            <legend>Novi meni</legend>

                            <div class="form-group">
                                <label>Naziv menija</label>
                                <input type="text" class="form-control" id="imeMenija" name="ime" required>
                            </div>

                            <div class="form-group">
                                <label>Prvi artikal</label>
                                <select class="form-control" id="artikal1" name="artikal1" required>
                                    <% for(let j = 0; j < artikli.length; j++) { %>
                                        <option value='<%= artikli[j].artikal_naziv%>'><%= artikli[j].artikal_naziv %></option>
                                    <% } %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Drugi artikal</label>
                                <select class="form-control" id="artikal2" name="artikal2" required>
                                    <% for(let j = 0; j < artikli.length; j++) { %>
                                        <option value='<%= artikli[j].artikal_naziv%>'><%= artikli[j].artikal_naziv %></option>
                                    <% } %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Treći artikal</label>
                                <select class="form-control" id="artikal3" name="artikal3">
                                    <% for(let j = 0; j < artikli.length; j++) { %>
                                        <option value='<%= artikli[j].artikal_naziv%>'><%= artikli[j].artikal_naziv %></option>
                                    <% } %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Četvrti artikal</label>
                                <select class="form-control" id="artikal4" name="artikal4">
                                    <% for(let j = 0; j < artikli.length; j++) { %>
                                        <option value='<%= artikli[j].artikal_naziv%>'><%= artikli[j].artikal_naziv %></option>
                                    <% } %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Cijena</label>
                                <input type="number" class="form-control" id="cijenaArtikla"  name="cijena" required>
                            </div>

                            <div class="form-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="myImage" id="myImage" accept="image/*">
                                    <label class="custom-file-label">Slika</label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-secondary" id="dugmic">Unesi!</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

